@using Microsoft.AspNetCore.Http.Features

@{
    var consentFeature = Context.Features.Get<ITrackingConsentFeature>();
    var showBanner = !consentFeature?.CanTrack ?? false;
    var cookieString = consentFeature?.CreateConsentCookie();
}

@if (showBanner)
{
    <nav id="cookieConsent" class="navbar navbar-light bg-light fixed-top" role="alert" style="display:none;">
        <div class="container">
            <span class="navbar-brand"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span></span>
            <div class="d-flex flex-grow-1 align-items-center justify-content-between">
                <p class="mb-0 mr-3">
                    Use this space to summarize your privacy and cookie use policy.
                </p>
                <div>
                    <a asp-page="/Privacy" class="btn btn-info mr-2">Learn More</a>
                    <button type="button" class="btn btn-outline-secondary" data-cookie-string="@cookieString">Accept</button>
                </div>
            </div>
        </div>
    </nav>
    <script>
        (function () {
            function getCookie(name) {
                var value = "; " + document.cookie;
                var parts = value.split("; " + name + "=");
                if (parts.length === 2) return parts.pop().split(';').shift();
            }
            var consentCookieName = '@(cookieString?.Split('=')[0])';
            var banner = document.getElementById("cookieConsent");
            if (!getCookie(consentCookieName)) {
                banner.style.display = '';
            }
            document.querySelector("#cookieConsent button[data-cookie-string]").addEventListener("click", function (el) {
                document.cookie = el.target.dataset.cookieString;
                banner.classList.add("d-none");
            }, false);
        })();
    </script>
}