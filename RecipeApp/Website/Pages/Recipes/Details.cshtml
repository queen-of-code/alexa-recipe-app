@page "{id:int}"
@model Website.Pages.Recipes.DetailsModel
@using System.Linq

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Recipe.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Recipe.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Recipe.PrepTimeMins)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Recipe.PrepTimeMins)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Recipe.Servings)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Recipe.Servings)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Recipe.CookTimeMins)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Recipe.CookTimeMins)
        </dd>
        <dt>
            Steps
        </dt>
        <dd>
            @if (Model.Recipe.Steps != null && Model.Recipe.Steps.Any())
            {
                <div style="white-space: pre-line;">@string.Join("\n", Model.Recipe.Steps)</div>
            }
            else
            {
                <em>No steps provided</em>
            }
        </dd>
    </dl>
</div>

<div>
    @if ((await AuthorizationService.AuthorizeAsync(
         User, Model.Recipe, RecipeOperations.Update)).Succeeded)
    {
        <a asp-page="./Edit" asp-route-id="@Model.Recipe.RecipeId">Edit</a>
        <text> | </text>
    }
    <a asp-page="./Index">Back to List</a>
</div>
