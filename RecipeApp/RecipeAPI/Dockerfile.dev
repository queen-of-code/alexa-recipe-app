FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["RecipeAPI/RecipeAPI.csproj", "RecipeAPI/"]
COPY ["Core/Core.csproj", "Core/"]
RUN dotnet build "Core/Core.csproj" -c Release -r linux-arm64 /p:Platform="Any CPU"
COPY . .
WORKDIR "/src/RecipeAPI"

FROM build AS publish
RUN dotnet publish "RecipeAPI.csproj" -c Release -o /app -r linux-arm64 /p:Platform="Any CPU"

FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "RecipeAPI.dll"]
